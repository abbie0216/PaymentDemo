<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clDialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/green_white_e9f2f0"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_order_status_1"
        android:tint="@color/blue_dark_216188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Package Processing"
        android:textColor="@color/blue_dark_216188"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_order_status_2"
        android:tint="@color/blue_dark_216188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Package Transporting"
        android:textColor="@color/blue_dark_216188"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_order_status_3"
        android:tint="@color/pink_light_d372bd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Package Arrived"
        android:textColor="@color/pink_light_d372bd"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_order_status_4"
        android:tint="@color/gray_light_9e9e9e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Package Received"
        android:textColor="@color/gray_light_9e9e9e"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/imageView4"
        app:layout_constraintTop_toTopOf="@id/imageView4" />
</androidx.constraintlayout.widget.ConstraintLayout>