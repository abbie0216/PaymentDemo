<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivOrderStatus"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/blue_light_72afd3"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_order_status_1" />

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Order#19320110001"
            android:textColor="@color/blue_dark_216188"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/ivStatusBg"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/blue_light_72afd3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ASD CD"
                android:textColor="@color/blue_dark_216188"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="Total Amount: 99"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue_light_379ddb"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvRecipientInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Recipient's Info"
                android:textColor="@color/gray_dark_626262"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray_light_9e9e9e" />

            <TextView
                android:id="@+id/tvRecipientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="Alex Wang"
                android:textColor="@color/gray_dark_626262"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvRecipientMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="090-1234-5678"
                android:textColor="@color/gray_dark_626262"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvRecipientAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="東京都渋谷区渋谷1-35-12"
                android:textColor="@color/gray_dark_626262"
                android:textSize="18dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>